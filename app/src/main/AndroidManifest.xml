<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.arkanull">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/redball"
        android:label="@string/app_name"
        android:roundIcon="@drawable/redball"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />

        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:exported="true" />

        <activity
            android:name=".PunteggiActivity"
            android:label="Punteggi"
            android:exported="true" />

        <activity
            android:name=".MultiplayerActivity"
            android:label="Multiplayer"
            android:exported="true" />

        <activity
            android:name=".CarrieraActivity"
            android:label="Carriera"
            android:exported="true" />

        <activity
            android:name=".LivelliActivity"
            android:label="Livelli"
            android:exported="true" />

        <activity
            android:name=".MenuActivity"
            android:label="Menu"
            android:configChanges="orientation|screenSize" />

        <activity
            android:name=".ImpostazioniActivity"
            android:label="Impostazioni"
            android:parentActivityName=".MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MenuActivity" />
        </activity>

        <activity
            android:name=".ClassificaActivity"
            android:label="Classifica"
            android:parentActivityName=".MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MenuActivity" />
        </activity>

        <activity
            android:name=".GiocaActivity"
            android:label="Gioca"
            android:parentActivityName=".MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MenuActivity" />
        </activity>

    </application>


</manifest>