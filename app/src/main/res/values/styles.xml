<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_gravity">center_horizontal</item>


    </style>


    <style name="AppThemeLand" parent="AppTheme">
        <!-- Customize your theme here. -->

        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">125dp</item>
        <item name="android:textSize">36sp</item>

        <item name="android:layout_marginStart">100dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_marginEnd">100dp</item>
        <item name="android:layout_marginBottom">100dp</item>

        <item name="android:layout_toStartOf">@id/parent</item>
        <item name="android:layout_toEndOf">@id/parent</item>
        <item name="android:layout_alignTop">@id/parent</item>

    </style>

    <style name="AppThemePortraitSmartphone" parent="AppTheme">
        <!-- Customize your theme here. -->

        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textSize">20sp</item>

        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginBottom">50dp</item>

        <item name="android:layout_toStartOf">@id/parent</item>
        <item name="android:layout_toEndOf">@id/parent</item>
        <item name="android:layout_alignTop">@id/parent</item>

    </style>
</resources>
