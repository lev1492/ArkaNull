<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemePlus" parent="AppTheme">
        <item name="android:layout_toStartOf">@id/parent</item>
        <item name="android:layout_toEndOf">@id/parent</item>
        <item name="android:layout_alignTop">@id/parent</item>

        <item name="android:textSize">20sp</item>


        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>


    <style name="AppThemeLandTablet" parent="AppThemePlus">
        <item name="android:textColor">#FAD201</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">125dp</item>
        <item name="android:textSize">36sp</item>

        <item name="android:layout_marginStart">100dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginBottom">100dp</item>

        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AppThemePortraitSmartphone" parent="AppThemePlus">
        <item name="android:textColor">#0000FF</item>

        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textSize">20sp</item>

        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginBottom">50dp</item>

        <item name="android:layout_gravity">center_horizontal</item>
    </style>




    <style name="AppThemeLandSmartphone" parent="AppThemePlus">
        <item name="android:textColor">#FE0000</item>

        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textSize">20sp</item>

        <item name="android:layout_marginStart">80dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>

        <item name="android:layout_gravity">center_vertical</item>

    </style>

    <style name="AppThemePortraitTablet" parent="AppThemePlus">
        <item name="android:textColor">#66FF00</item>

        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textSize">20sp</item>

        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginBottom">50dp</item>

        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
