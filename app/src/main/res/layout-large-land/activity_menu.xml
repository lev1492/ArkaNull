<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuActivity">


    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/nomeUtente"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="left|fill_vertical"
            android:gravity="center_vertical"
            android:textColor="#000000" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|fill_vertical"
            android:onClick="logOut"
            android:text="@string/logout" />
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/gioca"
            android:layout_marginTop="20dp"
            style="@style/AppThemeLandTablet"
            android:onClick="openGioca"
            android:text="@string/gioca" />

        <Button
            android:id="@+id/classifica"
            style="@style/AppThemeLandTablet"
            android:onClick="openClassifica"
            android:text="@string/classifica"
            app:layout_constraintTop_toBottomOf="@+id/gioca" />

        <Button
            android:id="@+id/impostazioni"
            style="@style/AppThemeLandTablet"
            android:onClick="openImpostazioni"
            android:text="@string/impostazioni"
            app:layout_constraintTop_toBottomOf="@+id/classifica" />
    </LinearLayout>
</LinearLayout>