<resources>

    <!-- Base application theme. -->
    <!--style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppToolBarSmartphone">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="AppImpostazioniSmartphone">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="AppThemeSmartphone" parent="AppTheme">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">70dp</item>
        <item name="android:layout_marginEnd">70dp</item>
        <item name="android:layout_marginTop">70dp</item>
        <item name="android:layout_marginBottom">70dp</item>
    </style>


    <style name="AppThemePortraitSmartphone" parent="AppThemeSmartphone">
        <item name="android:textColor">#0000FF</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="AppThemeLandSmartphone" parent="AppThemeSmartphone">
        <item name="android:textColor">#0000FF</item>
        <item name="android:layout_centerVertical">true</item>
    </style>




    <style name="AppThemeTablet" parent="AppTheme">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">125dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_marginStart">140dp</item>
        <item name="android:layout_marginTop">140dp</item>
        <item name="android:layout_marginEnd">140dp</item>
        <item name="android:layout_marginBottom">140dp</item>
    </style>

    <style name="AppToolBarTablet">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <style name="AppImpostazioniTablet">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="AppThemeLandTablet" parent="AppThemeTablet">
        <item name="android:textColor">#0000FF</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="AppThemePortraitTablet" parent="AppThemeTablet">
        <item name="android:textColor">#0000FF</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@drawable/splash</item>

    </style>

    <style name="ShapeAppearanceOverlay.Material3.Button" parent="AppThemeSmartphone">
        <item name="cornerSize">50%</item>
    </style>

    <style name="SwitcheTheme">
        <item name="colorAccent">@color/selection</item>
    </style>

    <style name="RadioButtonTheme">
        <item name="colorAccent">@color/selection</item>
    </style>

    <style name="ListFont" parent="@android:style/Widget.ListView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">sans</item>
    </style>
</resources>
