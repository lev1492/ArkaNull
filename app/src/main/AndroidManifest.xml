<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.arkanull">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/redball"
        android:label="@string/app_name"
        android:roundIcon="@drawable/redball"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Login"
            android:exported="true"
            android:label="Login"/>

        <activity
            android:name=".Punteggi"
            android:label="Punteggi"
            android:exported="true" />

        <activity
            android:name=".Multiplayer"
            android:label="Multiplayer"
            android:exported="true" />

        <activity
            android:name=".Carriera"
            android:label="Carriera"
            android:exported="true" />

        <activity
            android:name=".Livelli"
            android:label="Livelli"
            android:exported="true" />

        <activity
            android:name=".Menu"
            android:configChanges="orientation|screenSize"
            android:label="Menu" />

        <activity
            android:name=".Impostazioni"
            android:label="Impostazioni"
            android:parentActivityName=".Menu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Menu" />
        </activity>

        <activity
            android:name=".Classifica"
            android:label="Classifica"
            android:parentActivityName=".Menu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Menu" />
        </activity>

        <activity
            android:name=".Gioca"
            android:label="Gioca"
            android:parentActivityName=".Menu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Menu" />
        </activity>

        <activity
            android:name=".Account"
            android:label="Account"
            android:parentActivityName=".Menu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Menu" />
        </activity>

        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />
    </application>

</manifest>