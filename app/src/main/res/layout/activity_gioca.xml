<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.sms.nullpointers.arkanull.activity.GiocaActivity">

    <Button
        android:id="@+id/livelli"
        style="@style/AppThemePortraitSmartphone"
        android:layout_alignParentTop="true"
        android:layout_marginTop="139dp"
        android:background="@drawable/background"
        android:backgroundTint="@color/button_background_color"
        android:onClick="openLivelli"
        android:text="@string/livelli" />

    <Button
        android:id="@+id/carriera"
        style="@style/AppThemePortraitSmartphone"
        android:layout_centerVertical="true"
        android:background="@drawable/background"
        android:backgroundTint="@color/button_background_color"
        android:onClick="openCarriera"
        android:text="Editor" />

    <Button
        android:id="@+id/multiplayer"
        android:background="@drawable/background"
        android:backgroundTint="@color/button_background_color"

        style="@style/AppThemePortraitSmartphone"
        android:layout_alignParentBottom="true"
        android:onClick="openMultiPlayer"
        android:text="@string/multiplayer" />

    <Button
        android:id="@+id/editorLevel"
        style="@style/AppThemePortraitSmartphone"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/livelli"
        android:layout_marginBottom="161dp"
        android:background="@drawable/background"
        android:backgroundTint="@color/button_background_color"
        android:onClick="openCustomLevel"
        android:text="Editor Level" />
</RelativeLayout>